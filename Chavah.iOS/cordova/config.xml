<?xml version='1.0' encoding='utf-8'?>
<widget id="com.messianicradio" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chavah</name>
    <description>The very best Messianic Jewish and Hebrew Roots music on the web</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="https://messianicradio.com/" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="/images/chavah48x48.png" />
        <icon density="hdpi" src="/images/chavah72x72.png" />
        <icon density="xhdpi" src="/images/chavah96x96.png" />
        <icon density="xxhdpi" src="/images/chavah144x144.png" />
        <icon density="xxxhdpi" src="/images/chavah192x192.png" />
        <splash density="port-mdpi" src="/images/chavah320x480.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="/images/chavah29x29.png" width="29" />
        <icon height="40" src="/images/chavah40x40.png" width="40" />
        <icon height="50" src="/images/chavah50x50.png" width="50" />
        <icon height="57" src="/images/chavah57x57.png" width="57" />
        <icon height="58" src="/images/chavah58x58.png" width="58" />
        <icon height="60" src="/images/chavah60x60.png" width="60" />
        <icon height="72" src="/images/chavah72x72.png" width="72" />
        <icon height="76" src="/images/chavah76x76.png" width="76" />
        <icon height="80" src="/images/chavah80x80.png" width="80" />
        <icon height="100" src="/images/chavah100x100.png" width="100" />
        <icon height="114" src="/images/chavah114x114.png" width="114" />
        <icon height="120" src="/images/chavah120x120.png" width="120" />
        <icon height="144" src="/images/chavah144x144.png" width="144" />
        <icon height="152" src="/images/chavah152x152.png" width="152" />
        <icon height="180" src="/images/chavah180x180.png" width="180" />
        <splash height="480" src="/images/chavah320x480.png" width="320" />
        <splash height="960" src="/images/chavah640x960.png" width="640" />
        <splash height="1136" src="/images/chavah640x1136.png" width="640" />
        <splash height="1334" src="/images/chavah750x1334.png" width="750" />
        <splash height="1024" src="/images/chavah768x1024.png" width="768" />
        <splash height="768" src="/images/chavah1024x768.png" width="1024" />
        <splash height="2208" src="/images/chavah1242x2208.png" width="1242" />
        <splash height="2048" src="/images/chavah1536x2048.png" width="1536" />
        <splash height="1536" src="/images/chavah2048x1536.png" width="2048" />
        <splash height="1242" src="/images/chavah2208x1242.png" width="2208" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <preference name="BackgroundColor" value="0xff2f3d58" />
    <allow-navigation hap-rule="yes" href="https://messianicradio.com/*" />
    <platform name="windows">
        <icon height="44" src="/images/chavah44x44.png" width="44" />
        <icon height="50" src="/images/chavah50x50.png" width="50" />
        <icon height="71" src="/images/chavah71x71.png" width="71" />
        <icon height="120" src="/images/chavah120x120.png" width="120" />
        <icon height="150" src="/images/chavah150x150.png" width="150" />
    </platform>
    <platform name="wp8">
    </platform>
    <plugin name="nl.kingsquare.cordova.background-audio" spec="~1.0.1" />
</widget>
