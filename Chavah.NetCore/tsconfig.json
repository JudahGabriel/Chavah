{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es5",
    "lib": [ "dom","es5", "scripthost", "es2015.promise"],
    "noEmitHelpers": true,
    "strictNullChecks": true,
    "outFile": "wwwroot/js/app.js",
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "wwwroot/js/",
    "wwwroot/lib"
  ],
 "include": ["wwwroot/app/"]
}
